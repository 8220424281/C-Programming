#include<stdio.h>
#include<string.h>
int main(void)
{
int i;

char s[10];
scanf("%s",s);
int ch;
scanf("%d",&ch);
switch(ch)
{
	case 1:
	for(i=1;i<strlen(s);i++)
      {
      
	s[i]=tolower(s[i]);
      }
      printf("%s",s);
      break;
      case 2:
      	for(i=1;i<strlen(s);i++)
      {
	s[i]=toupper(s[i]);
      }
 printf("%s",s);	
}
}



   
  
